pipeline {
    agent none
    stages {
        stage('Pull request proposed jobs') {
        when {
            branch 'PR-*'
        }
            parallel {
                stage('DFG-converged-openstack-k8s-keystone-operator-distgit-pr') {
                    steps {
                        build job: 'DFG-converged-openstack-k8s-keystone-operator-distgit-pr',
                                  parameters: [
                                      string(name: 'GITHUB_PULL_REQUEST_ID', value: String.valueOf(CHANGE_ID))
                                  ]
                    }
                }
                stage('DFG-converged-openstack-k8s-keystone-operator-buildah') {
                    steps {
                        build job: 'DFG-converged-openstack-k8s-keystone-operator-buildah',
                                  parameters: [
                                      string(name: 'GITHUB_PULL_REQUEST_ID', value: String.valueOf(CHANGE_ID))
                                  ]
                    }
                }
            }
        }
        stage('Pull request merged jobs') {
        when {
            allOf {
                environment name: 'CHANGE_ID', value: ''
                branch 'master'
            }
        }
        steps {
            build job: 'DFG-converged-openstack-k8s-keystone-operator-merge'
        }
        }
    }
}
